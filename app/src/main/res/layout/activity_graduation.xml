<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.purplebeen.big_future.controllers.activities.GraduationActivity"
    android:background="@mipmap/applebackground">

    <ImageView
        android:id="@+id/timecapsule"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:src="@drawable/timecapsule"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="70dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timecapsule"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="Graduation"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:text="언제 졸업하시나요?"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:text="2019.02.09"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:background="#009688"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="5dp"
        android:text="다음으로"
        android:textSize="14dp"
        android:textColor="@android:color/white"/>

</RelativeLayout>
