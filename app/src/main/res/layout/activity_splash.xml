<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kr.purplebeen.big_future.controllers.activities.SplashActivity"
    android:background="#009688">
    
    <ImageView
        android:id="@+id/timecapsule"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:src="@drawable/timecapsule"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="70dp"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timecapsule"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="Big Future"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:text="미래의 나에게..."
        android:textColor="@android:color/white"
        android:textSize="20dp"
        android:layout_marginTop="15dp"/>

</RelativeLayout>
